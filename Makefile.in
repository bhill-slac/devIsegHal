#!/usr/bin/make -f
# -*- makefile -*-

all:
	(cd <TOPDIR>; make)

install-isegioc-bin: 
	install -d ${DESTDIR}/usr/bin
	install <TOPDIR>/bin/$(EPICS_HOST_ARCH)/isegIOC ${DESTDIR}/usr/bin/.

install-isegioc-dev: 
	install -d ${DESTDIR}/etc/epics/isegioc
	#install substitutions ${DESTDIR}/etc/epics/isegioc/.
	#install drivers ${DESTDIR}/etc/epics/isegioc/.
	cp -a <TOPDIR>/dbd ${DESTDIR}/etc/epics/isegioc/.
	sed -e "s|EPICS_HOST_ARCH|$(EPICS_HOST_ARCH)|" isegioc/st.cmd > ${DESTDIR}/etc/epics/isegioc/st.cmd

distclean:
	rm -rf <TOPDIR>
	rm <TOPDIR>/Makefile

install: install-isegioc-bin install-isegioc-dev 

.PHONY: all install install-isegioc-bin install-isegioc-dev distclean

